<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="wrap_content"
        android:layout_height="428dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="62dp"
        android:layout_marginTop="109dp"
        android:layout_marginEnd="58dp"
        android:contentDescription="tablesmap"
         />

    <ImageView
        android:id="@+id/restaurant_fragment"
        android:layout_width="120dp"
        android:layout_height="114dp"
        android:layout_below="@+id/titlebkg"
        android:layout_alignParentStart="true"
        android:layout_marginStart="-6dp"
        android:layout_marginTop="-2dp"
        app:srcCompat="@drawable/homebtninactive" />

    <ImageView
        android:id="@+id/menu_fragment"
        android:layout_width="120dp"
        android:layout_height="114dp"
        android:layout_below="@+id/titlebkg"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="-6dp"
        app:srcCompat="@drawable/menubtnactive" />

    <ImageView
        android:id="@+id/buttonBookingDetails"
        android:layout_width="match_parent"
        android:layout_height="131dp"
        android:layout_alignParentBottom="true"
