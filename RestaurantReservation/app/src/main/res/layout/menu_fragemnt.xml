<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textSize="23sp"
        android:text="Menu Fragment"
        android:id="@+id/textTitle"
        android:layout_marginTop="44dp"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/restaurant_fragment"
        android:text="Go To Restaurant"
        android:layout_marginTop="10dp"
        android:layout_below="@id/textTitle"
        android:layout_centerHorizontal="true"/>
    <Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/menu_fragment"
    android:text="Go To Menu"
    android:layout_marginTop="10dp"
    android:layout_below="@id/restaurant_fragment"
    android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/buttonBookingDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Book a table"
        android:layout_below="@id/menu_fragment"
        android:layout_centerHorizontal="true"
        />

</RelativeLayout>